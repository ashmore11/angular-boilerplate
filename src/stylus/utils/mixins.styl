inlist(val, list)
	return true if val == prop for prop, i in list

clearfix()
	&:before
	&:after
		content: " "
		display: table

	&:after
		clear: both

	*zoom: 1
		
size($width, $height)
	width : $width
	height: $height
	
fullscreen()
	width : 100%
	height: 100%
	
relative-fullscreen()
	relative: top left
	width   : 100%
	height  : 100%
	
fixed-fullscreen()
	fixed : top left
	width : 100%
	height: 100%
	
absolute-fullscreen()
	absolute: top left
	width   : 100%
	height  : 100%
	
absolute-center()
	absolute : top 50% left 50%
	transform: translate(-50%, -50%)
	
text-indent($offset = -99999px)
	text-indent: $offset
	
transition-style()
	transition: all 0.25s $ease-fn
	
offset($margin, $size)
	{$margin}: -( $size / 2 )
	
hide()
	opacity: 0
	visibility: hidden
	
show()
	opacity: 1
	visibility: inherit

// Col mixin
col(n, arg = width)
	{arg}: ( n / 12 * 100% )
	
underline($color = $white, $padding = 2px)
	border-bottom : 1px solid $color
	padding-bottom: $padding
	
bg-color($color, $opacity = 1)
	background-color: rgba( $color, $opacity )